<Window x:Class="UserInterface.NonModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NonModalWindow"
        Width="500"
        Height="300"
        Background="Beige"
        WindowStartupLocation="CenterScreen">
  <StackPanel HorizontalAlignment="Center">
    <TextBlock Margin="0 15"
               Text="I am a non - Modal Window" />
    <TextBlock Margin="0 15"
               Text="{Binding MyText}" />
    <CheckBox x:Name="chkBox"
              Margin="0 15"
              Content="Check this to set result as true instantly. No need to close this window to see update"
              IsChecked="{Binding CheckMe}" />
  </StackPanel>
</Window>
